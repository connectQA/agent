{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "target": "es2017",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  }
}
